@sync_to_async
def get_cart_items_count(user: TelegramUser) -> int:
    """–ü–æ–ª—É—á–µ–Ω–∏–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–∞ —Ç–æ–≤–∞—Ä–æ–≤ –≤ –∫–æ—Ä–∑–∏–Ω–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è."""
    count = CartItem.objects.filter(cart__user=user, is_active=True).count()
    logger.debug(
        f"–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ç–æ–≤–∞—Ä–æ–≤ –≤ –∫–æ—Ä–∑–∏–Ω–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user.telegram_id}: {count}")
    return count


@sync_to_async
def get_product_by_id(product_id: int) -> Product:
    """–ü–æ–ª—É—á–µ–Ω–∏–µ —Ç–æ–≤–∞—Ä–∞ –ø–æ –µ–≥–æ ID."""
    product = Product.objects.select_related(
        'category').get(id=product_id, is_active=True)
    logger.debug(f"–ü–æ–ª—É—á–µ–Ω —Ç–æ–≤–∞—Ä: {product.name} (ID: {product_id})")
    return product


@sync_to_async
def get_or_create_cart(user: TelegramUser) -> Tuple[Cart, bool]:
    """–ü–æ–ª—É—á–µ–Ω–∏–µ –∏–ª–∏ —Å–æ–∑–¥–∞–Ω–∏–µ –∫–æ—Ä–∑–∏–Ω—ã –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è."""
    cart, created = Cart.objects.get_or_create(user=user, is_active=True)
    if created:
        logger.info(
            f"–°–æ–∑–¥–∞–Ω–∞ –Ω–æ–≤–∞—è –∫–æ—Ä–∑–∏–Ω–∞ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user.telegram_id}.")
    else:
        logger.debug(f"–ö–æ—Ä–∑–∏–Ω–∞ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {user.telegram_id} –ø–æ–ª—É—á–µ–Ω–∞.")
    return cart, created


@sync_to_async
def update_cart_item(cart: Cart, product: Product, quantity: int) -> Optional[CartItem]:
    """–û–±–Ω–æ–≤–ª—è–µ—Ç –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ç–æ–≤–∞—Ä–∞ –≤ –∫–æ—Ä–∑–∏–Ω–µ."""
    item, created = CartItem.objects.get_or_create(
        cart=cart,
        product=product,
        defaults={'quantity': quantity, 'is_active': True}
    )
    if created:
        logger.info(
            f"–î–æ–±–∞–≤–ª–µ–Ω –Ω–æ–≤—ã–π —Ç–æ–≤–∞—Ä {product.name} (ID: {product.id}) –≤ –∫–æ—Ä–∑–∏–Ω—É –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {cart.user.telegram_id} —Å –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ–º {quantity}.")
    else:
        item.quantity += quantity
        if item.quantity < 1:
            item.delete()
            logger.info(
                f"–¢–æ–≤–∞—Ä {product.name} (ID: {product.id}) —É–¥–∞–ª—ë–Ω –∏–∑ –∫–æ—Ä–∑–∏–Ω—ã –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {cart.user.telegram_id}.")
            return None
        item.save()
        logger.info(
            f"–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ç–æ–≤–∞—Ä–∞ {product.name} (ID: {product.id}) –≤ –∫–æ—Ä–∑–∏–Ω–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è {cart.user.telegram_id} –æ–±–Ω–æ–≤–ª–µ–Ω–æ –¥–æ {item.quantity}.")
    return item


def product_detail_keyboard(
    product_id: int,
    back_callback: str,
    current_quantity: int = 1,
    cart_total: float = 0,
    cart_quantity: int = 0
) -> InlineKeyboardMarkup:
    """–ì–µ–Ω–µ—Ä–∞—Ü–∏—è –∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã –¥–ª—è –¥–µ—Ç–∞–ª–µ–π –ø—Ä–æ–¥—É–∫—Ç–∞."""
    logger.debug(f"–ì–µ–Ω–µ—Ä–∞—Ü–∏—è –∫–ª–∞–≤–∏–∞—Ç—É—Ä—ã –¥–ª—è –ø—Ä–æ–¥—É–∫—Ç–∞ ID {product_id}.")
    buttons = [
        [
            InlineKeyboardButton(text="-", callback_data=f"dec:{product_id}"),
            InlineKeyboardButton(
                text=str(current_quantity), callback_data="noop"),
            InlineKeyboardButton(text="+", callback_data=f"inc:{product_id}"),
        ],
        [
            InlineKeyboardButton(
                text="–î–æ–±–∞–≤–∏—Ç—å –≤ –∫–æ—Ä–∑–∏–Ω—É",
                callback_data=f"add:{product_id}:{current_quantity}"
            )
        ],
        [
            InlineKeyboardButton(
                text=f"üõí –ö–æ—Ä–∑–∏–Ω–∞: {cart_total} ‚ÇΩ ({cart_quantity} —à—Ç.)" if cart_quantity > 0 else "üõí –ö–æ—Ä–∑–∏–Ω–∞: –ø—É—Å—Ç–∞",
                callback_data="cart"
            )
        ],
        [
            InlineKeyboardButton(text="‚¨ÖÔ∏è –ù–∞–∑–∞–¥", callback_data=back_callback),
            InlineKeyboardButton(text="–í –º–µ–Ω—é", callback_data="main_menu")
        ]
    ]
    return InlineKeyboardMarkup(inline_keyboard=buttons)

